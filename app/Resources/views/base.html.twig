<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %}blog{% endblock %} - Rene</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
        		<!-- Incluye los css -->
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
	   		<link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>	
	   		
	   	
    	
            <link href="{{ asset('css/screen.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}
        	<!--Include jQuery and jQuery roundrr dependancies-->
	   		<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
	   		<script type='text/javascript' src="{{ asset('js/ui/jQuery.roundrr.js') }}"></script>
	   		
	   		<!-- Include Demo app code -->
    		<script type='text/javascript' src="{{ asset('js/ui/app.js') }}"></script>
        
        {% endblock %}
        
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
								<li><span href="#">Rene Recalde<span> </li>	
                                <li><a href="{{ path('ReneBlogBundle_homepage') }}">Home</a></li>
                                <li><a href="{{ path('ReneBlogBundle_about') }}">Herramientas</a></li>
                                <li><a href="{{ path('ReneBlogBundle_contact') }}">Contacto</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>

                <hgroup>
                	<div class="contenedor">
	                	<div class="lateral">
                			<img src="{{asset('img/logo.png') }}" alt="Blog" />
                    	</div>
                    	<div class="principal">
                    		<h1>Bienvenido al Blog</h1>
                    		<p>
                    			Porque cada día tenemos web mas dinamica precentamos el Blog de herramientas y tecnologias para la web. 
                    		</p>
                    		<div class="boton">
	                    		<a  href="{{ path('ReneBlogBundle_about') }}">Leer más acerca del blog</a>
     						</div>
     			       	</div>
                    </div>
                    	
                
                </hgroup>
            </header>

            <section class="main-col">
                {% block body %}{% endblock %}
            </section>
            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>

            <div id="footer">
                {% block footer %}
                	Blog personal Rene Recalde. 
                	<p>
                	Basado en symblog - created by <a href="https://github.com/dsyph3r">dsyph3r</a>
                	</p>
                	Sitio desarrollado con software libre <a href="http://es.wikipedia.org/wiki/GNU/Linux">GNU/Linux</a>.
                {% endblock %}
            </div>
        </section>

        
    </body>
</html>
